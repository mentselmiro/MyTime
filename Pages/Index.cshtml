@page
@model MyTime.Pages.IndexModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="background-container">
    <h1>Welcome to MyTime</h1>
    <p>Enjoy exploring our application!</p>
</div>

<div>
    <h2>Enter Your Details</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="SiteUser.Name"></label>
            <input asp-for="SiteUser.Name" class="form-control input-field" />
        </div>
        <div class="form-group">
            <label asp-for="SiteUser.Email"></label>
            <input asp-for="SiteUser.Email" class="form-control input-field" />
        </div>
        <button type="submit" class="submit-button">Submit</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

